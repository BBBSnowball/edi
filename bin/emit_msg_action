#!/bin/bash

readonly key="irc.EDI.action._channel_"
readonly msg="$(echo -n $@ | $(dirname $0)/json_escape)"

if [[ -z $msg ]]; then
    echo "USAGE: $0 <message>"
    exit 1
fi

amqp-publish -u "amqp://${AMQP_SERVER:-localhost}" -e "msg" -r "$key" \
	     --content-type="text/plain" \
	     -b "${msg}"
